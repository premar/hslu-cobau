/****  Header for VSL-Language ****/
grammar vsl;

@header {
package ch.hslu.cobau.vsl;
}

///////////////////////////////////////////////////////////////////////////////
// Parser-Regeln
///////////////////////////////////////////////////////////////////////////////
programm : PROGRAM (ZAHL ';')*  '.' ;

///////////////////////////////////////////////////////////////////////////////
// Scanner(Lexer)-Regeln
///////////////////////////////////////////////////////////////////////////////
PROGRAM:     'PROGRAM';
WS:          [ \t\r\n]+ -> skip; // Ã¼berlese spaces, tabs, cr/nl
ZAHL :       '-'? ZIFFER+ ;
ZIFFER:     '0'..'9';
